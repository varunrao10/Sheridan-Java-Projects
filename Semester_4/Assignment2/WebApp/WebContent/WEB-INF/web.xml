<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <display-name>HockeyLeagueWebApp</display-name>
  
  <servlet>
    <servlet-name>TeamServlet</servlet-name>
    <servlet-class>sheridan.college.assignments.TeamServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TeamServlet</servlet-name>
    <url-pattern>/TeamServlet</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>ShowTeams</servlet-name>
    <servlet-class>sheridan.college.assignments.ShowTeams</servlet-class>
    <jsp-file>/ShowTeams.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowTeams</servlet-name>
    <url-pattern>/ShowTeams</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>TeamServlet</welcome-file>
  </welcome-file-list>
</web-app>